  "authors": [
    "icy_turtle aka IncandescentTurtle"
  ],

  "license": "MIT License",

  "environment": "*",
  "entrypoints": {
    "client": [
      "mod.icy_turtle.friendhighlighter.FriendHighlighter"
    ],
    "modmenu": [
      "mod.icy_turtle.friendhighlighter.config.ModMenuIntegration"
    ]
  },

  "mixins": [
    "friendhighlighter.mixins.json"
  ],

  "depends": {
